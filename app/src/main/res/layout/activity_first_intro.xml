<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/toleft">

        <Button
            android:id="@+id/button_round_1"
            android:layout_width="@dimen/welcome_intro_round_size"
            android:layout_height="@dimen/welcome_intro_round_size"
            android:layout_marginLeft="@dimen/welcome_intro_round_size"
            android:background="@color/white"/>

        <Button
            android:id="@+id/button_round_2"
            android:layout_width="@dimen/welcome_intro_round_size"
            android:layout_height="@dimen/welcome_intro_round_size"
            android:layout_marginLeft="@dimen/welcome_intro_round_size"
            android:background="@color/splitLine"/>

        <Button
            android:id="@+id/button_round_3"
            android:layout_width="@dimen/welcome_intro_round_size"
            android:layout_height="@dimen/welcome_intro_round_size"
            android:layout_marginLeft="@dimen/welcome_intro_round_size"
            android:background="@color/splitLine"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/welcome_intro_left"
        android:layout_marginRight="@dimen/welcome_intro_left"
        android:layout_marginBottom="@dimen/welcome_intro_bottom"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/welcome_button"
        android:textColor="@color/white"
        android:text="@string/enter"/>

</RelativeLayout>
